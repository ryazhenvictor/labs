<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Auto Blog</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <nav>
                    <ul>
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/privacyPolicy">Privacy Policy</a></li>
                    </ul>
                </nav>
                <div class="col-12">
                    <h1>Articles</h1>
                </div>

                <div class="col-6">
                    <ul class="list-group">
                        <% articles.forEach(article => { %>
                        <li class="list-group-item">
                             <a href="/articles/<%= article.id %>">
                                <strong><%= article.title %></strong><br />
                                <%= article.content.substring(0, 100) %><strong>...читати статтю повністю</strong>
                            </a>
                        </li>
                        <% }) %>
                    </ul>
                </div>

                <div class="col-6">
                    <form action="/create" method="POST">
                        <input type="text" name="title" placeholder="Enter article title" required />
                        <input type="text" name="content" placeholder="Enter article content" required />
                        <button type="submit">Add Article</button>
                    </form>
                </div>
            </div>
        </div>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
